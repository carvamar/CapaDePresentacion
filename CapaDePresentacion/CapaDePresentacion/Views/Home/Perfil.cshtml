
@{
    ViewData["Title"] = "Perfil";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <style>
        /* Estilos para botones los botones */
        .btn {
            border-radius: 25px;
            padding: 10px 20px;
            transition: background-color 0.3s ease;
        }

        .btn-cancelar {
            background-color: #D7A37B;
        }

        .btn-reprogramar {
            background-color: #A3C5A0;
        }

        .btn-cancelar:hover {
            background-color: #C6896B;
        }

        .btn-reprogramar:hover {
            background-color: #8A9E80;
        }
    </style>
</head>
<body>
    <!-- Sección de Próximas Citas -->
    <section class="container-fluid bg-light">
        <div class="container">
            <div class="text-section" style="color:#936240; padding: 20px 25px;">
                <h2>Mis Próximas Citas</h2>
                <p>Consulta los detalles de tus próximas citas y gestiona fácilmente tus reservas.</p>
            </div>
            <div class="row">
                <!-- Cita 1 -->
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0">
                        <img src="/images/cita.jpg" class="card-img-top" alt="Servicio 1" style="height: 200px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h5 class="card-title" style="color: #a67b5b;">Facial Rejuvenecedor</h5>
                            <p class="text-muted">15 de diciembre de 2024, 10:00 AM</p>
                            <div class="d-flex justify-content-center gap-3">
                                <button class="btn btn-cancelar" data-bs-toggle="modal" data-bs-target="#cancelModal">Cancelar</button>
                                <button class="btn btn-reprogramar" id="reprogramar-btn" data-bs-toggle="modal" data-bs-target="#reprogramModal">Reprogramar</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cita 2 -->
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0">
                        <img src="/images/R.jpg" class="card-img-top" alt="Servicio 2" style="height: 200px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h5 class="card-title" style="color: #a67b5b;">Masaje Relajante</h5>
                            <p class="text-muted">20 de diciembre de 2024, 3:00 PM</p>
                            <div class="d-flex justify-content-center gap-3">
                                <button class="btn btn-cancelar" data-bs-toggle="modal" data-bs-target="#cancelModal">Cancelar</button>
                                <button class="btn btn-reprogramar" id="reprogramar-btn" data-bs-toggle="modal" data-bs-target="#reprogramModal">Reprogramar</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cita 3 -->
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0">
                        <img src="/images/OIP.jpg" class="card-img-top" alt="Servicio 3" style="height: 200px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h5 class="card-title" style="color: #a67b5b;">Terapia Corporal</h5>
                            <p class="text-muted">25 de diciembre de 2024, 9:00 AM</p>
                            <div class="d-flex justify-content-center gap-3">
                                <button class="btn btn-cancelar" data-bs-toggle="modal" data-bs-target="#cancelModal">Cancelar</button>
                                <button class="btn btn-reprogramar" id="reprogramar-btn" data-bs-toggle="modal" data-bs-target="#reprogramModal">Reprogramar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Modal de Confirmación Cancelación -->
    <div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cancelModalLabel">Confirmar Cancelación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas cancelar esta cita?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-reprogramar" data-bs-dismiss="modal">No, regresar</button>
                    <button type="button" class="btn btn-cancelar">Sí, cancelar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
        });
        document.getElementById('reprogramar-btn').addEventListener('click', function () {
            window.location.href = '@Url.Action("Cita", "Home")';
        });
    </script>
</body>
</html>