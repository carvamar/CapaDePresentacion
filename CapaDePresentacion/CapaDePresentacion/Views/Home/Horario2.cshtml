@page
@model CapaDePresentacion.Views.Home.Horario2Model
@{
    Layout = "~/Views/Shared/_LayoutHorarios.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/StyleSheet.css">
</head>
<body>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-link active" id="nav-home-tab" role="tab" aria-controls="nav-home" aria-selected="false">Horarios y Turnos</a>
            <a class="nav-link" id="nav-profile-tab" href="/Home/Horario1" role="tab" aria-controls="nav-profile" aria-selected="false">Ver Turnos Asignados</a>
            <a class="nav-link" id="nav-contact-tab" href="/Home/Horario2" role="tab" aria-controls="nav-contact" aria-selected="false">Actualizacion Horarios</a>
            <a class="nav-link" id="nav-contact-tab" href="/Home/Horario3" role="tab" aria-controls="nav-contact" aria-selected="false"></a>
        </div>
    </nav>
    @* Pestañas menu *@

    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
            <!-- Contenido de Perfil pacientes (negrita letras) (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
            <!-- Contenido de VerInfoPte (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            <!-- Contenido de Historial (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-horariopaciente" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            <!-- Contenido de Horario (pestañas) -->
        </div>
    </div>
    <div class="container mt-5">
        <!-- Alerta para notificar cambios -->
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <strong>¡Atención!</strong> Tu horario ha sido actualizado recientemente. Revisa los detalles a continuación.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <!-- Perfil de empleado -->
        <div class="card">
            <div class="card-header">
                <h4>Perfil de Empleado</h4>
            </div>
            <div class="card-body">
                <p><strong>Nombre:</strong> Esteban Polo</p>
                <p><strong>Posición:</strong> Desarrollador de Software</p>
                <p><strong>Email:</strong> juan.perez@empresa.com</p>

                <!-- Sección de horario -->
                <div class="mt-4">
                    <h5>Horario Actualizado</h5>
                    <p><strong>Horario de Trabajo:</strong></p>
                    <ul>
                        <li>Lunes a Viernes: 9:00 AM - 5:00 PM</li>
                        <li>Sábado: 10:00 AM - 2:00 PM</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    @* Importante ver *@
    <script src="~/js/Horarios.js"></script>
</body>
</html>