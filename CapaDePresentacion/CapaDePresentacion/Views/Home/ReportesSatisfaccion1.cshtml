@page
@model CapaDePresentacion.Views.Home.ReportesSatisfaccion1Model
@{
    Layout = "~/Views/Shared/_LayoutReportesSatisfaccion.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/StyleSheet.css">
</head>
<body>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-link active" id="nav-home-tab" role="tab" aria-controls="nav-home" aria-selected="false">Reporte y Satisfaccion</a>
            <a class="nav-link" id="nav-profile-tab" href="/Home/ReportesSatisfaccion1" role="tab" aria-controls="nav-profile" aria-selected="false">Informes</a>
        </div>
    </nav>
    @* Pestañas menu *@

    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
            <!-- Contenido de Perfil pacientes (negrita letras) (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
            <!-- Contenido de VerInfoPte (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            <!-- Contenido de Historial (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-horariopaciente" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            <!-- Contenido de Horario (pestañas) -->
        </div>
    </div>

    <div class="container my-4">
        <!-- Título -->
        <h1 class="text-center mb-4">Informe de Satisfacción del Cliente</h1>

        <!-- Selección de Módulo -->
        <div class="mb-4">
            <label for="moduleSelect" class="form-label">Seleccione el módulo:</label>
            <select id="moduleSelect" class="form-select">
                <option value="general">Informe General</option>
                <option value="individual">Informe por Empleado</option>
                <option value="grafico">Gráficos de Satisfacción</option>
            </select>
        </div>

        <!-- Filtro por Empleado -->
        <div id="employeeFilter" class="mb-4 d-none">
            <label for="employeeSelect" class="form-label">Filtrar por empleado:</label>
            <select id="employeeSelect" class="form-select">
                <option value="1">Empleado 1</option>
                <option value="2">Empleado 2</option>
                <option value="3">Empleado 3</option>
            </select>
        </div>

        <!-- Botón de Generar Informe -->
        <div class="mb-4">
            <button id="generateReport" class="btn btn-primary w-100">Generar Informe</button>
        </div>

        <!-- Área de Resultados -->
        <div id="reportArea" class="d-none">
            <h2>Resultados del Informe</h2>
            <div id="reportContent" class="border p-3">
                <!-- Aquí se insertará dinámicamente el contenido del informe -->
            </div>
        </div>
    </div>
    <br>
    <br>
    <br> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    @* Importante ver *@
    <script src="~/js/ReportesSatisfaccion.js"></script>
</body>
</html>