@page
@model CapaDePresentacion.Views.Home.GE3Model
@{
    Layout = "~/Views/Shared/_LayoutGestEmpl.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/StyleSheet.css">
</head>
<body>
    @* Barra de navegacion distribuido en 3 pestañas con PERFIL Pacientes en negrita *@
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-link active" id="nav-home-tab" role="tab" aria-controls="nav-home" aria-selected="false">Perfil Pacientes</a>
            <a class="nav-link" id="nav-profile-tab" href="/Home/GE1" role="tab" aria-controls="nav-profile" aria-selected="false">Ver Informacion Paciente</a>
            <a class="nav-link" id="nav-contact-tab" href="/Home/GE2" role="tab" aria-controls="nav-contact" aria-selected="false">Historial Paciente</a>
            <a class="nav-link" id="nav-contact-tab" href="/Home/GE3" role="tab" aria-controls="nav-contact" aria-selected="false">Horario Pacientes</a>
        </div>
    </nav>

    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
           @* Contenido de Perfil pacientes (negrita letras) (pestañas) *@
        </div>
        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
            @* Contenido de VerInfoPte (pestañas) *@
        </div>
        <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            @* Contenido de Historial (pestañas) *@ 
        </div>
        <div class="tab-pane fade" id="nav-horariopaciente" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            @* Contenido de Horario (pestañas) *@
        </div>
    </div>

    <div class="container my-5">
        <h2>Seleccionar Horario para Cita</h2>
        <div class="row">
            @* Sección de Horarios *@
            <div class="col-md-6">
                <h4>Horarios Disponibles</h4>
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#citaResumen" aria-expanded="false" aria-controls="citaResumen" onclick="showSummary('9:00 AM', 'Terapeuta 1', 'Masajes Relajantes')">9:00 AM - 10:00 AM</a>
                    <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#citaResumen" aria-expanded="false" aria-controls="citaResumen" onclick="showSummary('10:00 AM', 'Terapeuta 2', 'Facial Rejuvenecedor')">10:00 AM - 11:00 AM</a>
                    <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#citaResumen" aria-expanded="false" aria-controls="citaResumen" onclick="showSummary('11:00 AM', 'Terapeuta 3', 'Depilación Corporal')">11:00 AM - 12:00 PM</a>
                </div>
            </div>

            @* Sección de Resumen de Cita *@
            <div class="col-md-6">
                <h4>Resumen de la Cita</h4>
                <div class="collapse" id="citaResumen">
                    <div class="card card-body">
                        <p><strong>Horario Seleccionado:</strong> <span id="resumenHorario">--</span></p>
                        <p><strong>Terapeuta:</strong> <span id="resumenTerapeuta">--</span></p>
                        <p><strong>Servicio:</strong> <span id="resumenServicio">--</span></p>
                        <button class="btn btn-primary mt-3" onclick="confirmarCita()">Confirmar Reserva</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    @* Importante ver (vinculo a JS) *@
    <script src="~/js/GestionEmpleado.js"></script>
</body>
</html>