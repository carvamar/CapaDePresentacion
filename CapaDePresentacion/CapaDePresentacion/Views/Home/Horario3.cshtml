@page
@model CapaDePresentacion.Views.Home.Horario3Model
@{
    Layout = "~/Views/Shared/_LayoutHorarios.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/StyleSheet.css">
    <title>Notificación de Cambios de Turno</title>
</head>
<body>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-link active" id="nav-home-tab" role="tab" aria-controls="nav-home" aria-selected="false">Horarios y Turnos</a>
            <a class="nav-link" id="nav-profile-tab" href="/Home/Horario1" role="tab" aria-controls="nav-profile" aria-selected="false">Ver Turnos Asignados</a>
            <a class="nav-link" id="nav-contact-tab" href="/Home/Horario2" role="tab" aria-controls="nav-contact" aria-selected="false">Actualizacion Horarios</a>
            <a class="nav-link" id="nav-contact-tab" href="/Home/Horario3" role="tab" aria-controls="nav-contact" aria-selected="false"></a>
        </div>
    </nav>
    @* Pestañas menu *@

    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
            <!-- Contenido de Perfil pacientes (negrita letras) (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
            <!-- Contenido de VerInfoPte (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            <!-- Contenido de Historial (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-horariopaciente" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            <!-- Contenido de Horario (pestañas) -->
        </div>
    </div>
    
        <!-- Aquí está el contenedor para la notificación -->
        <div class="container mt-5">
            <!-- Notificación de actualización de turno -->
            <div class="alert alert-success alert-dismissible fade show" role="alert" id="notification" style="display: none;">
                <strong>Actualización Exitosa!</strong> El turno del empleado ha sido actualizado correctamente.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

            <!-- Contenido principal de la página -->
            <div class="row">
                <div class="col-md-6">
                    <h3>Actualizar Turno de Empleado</h3>
                    <!-- Formulario de ejemplo para actualizar turno -->
                    <form id="updateForm">
                        <div class="mb-3">
                            <label for="employeeName" class="form-label">Nombre del Empleado</label>
                            <input type="text" class="form-control" id="employeeName" required>
                        </div>
                        <div class="mb-3">
                            <label for="newShift" class="form-label">Nuevo Turno</label>
                            <input type="text" class="form-control" id="newShift" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Actualizar Turno</button>
                    </form>
                </div>
            </div>
        </div>
    <br>
    <br>
    <br>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    @* Importante ver *@
    <script src="~/js/Horarios.js"></script>
</body>
</html>