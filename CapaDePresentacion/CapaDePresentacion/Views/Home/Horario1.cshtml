@page
@model CapaDePresentacion.Views.Home.Horario1Model
@{
    Layout = "~/Views/Shared/_LayoutHorarios.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@3.2.0/dist/fullcalendar.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/StyleSheet.css">
</head>
<body>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-link active" id="nav-home-tab" role="tab" aria-controls="nav-home" aria-selected="false">Horarios y Turnos</a>
            <a class="nav-link" id="nav-profile-tab" href="/Home/Horario1" role="tab" aria-controls="nav-profile" aria-selected="false">Ver Turnos Asignados</a>
            <a class="nav-link" id="nav-contact-tab" href="/Home/Horario2" role="tab" aria-controls="nav-contact" aria-selected="false">Actualizacion Horarios</a>
            <a class="nav-link" id="nav-contact-tab" href="/Home/Horario3" role="tab" aria-controls="nav-contact" aria-selected="false"></a>
        </div>
    </nav>
    @* Pestañas menu *@

    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
            <!-- Contenido de Perfil pacientes (negrita letras) (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
            <!-- Contenido de VerInfoPte (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            <!-- Contenido de Historial (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-horariopaciente" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            <!-- Contenido de Horario (pestañas) -->
        </div>
    </div>
    <div class="container mt-5">
        <!-- Perfil del Empleado -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3>Perfil del Empleado</h3>
                    </div>
                    <div class="card-body">
                        <p><strong>Nombre:</strong> Esteban Polo</p>
                        <p><strong>Cargo:</strong> Desarrollador Web</p>
                        <p><strong>Departamento:</strong> Tecnología</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filtros para Turnos -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Filtros de Turnos</h4>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="filterTurno">Seleccionar Turno:</label>
                                    <select class="form-select" id="filterTurno">
                                        <option value="todos">Todos</option>
                                        <option value="mañana">Turno Mañana</option>
                                        <option value="tarde">Turno Tarde</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="filterFecha">Seleccionar Fecha:</label>
                                    <input type="date" class="form-control" id="filterFecha">
                                </div>
                                <div class="col-md-4">
                                    <label>&nbsp;</label>
                                    <button type="button" class="btn btn-primary form-control" onclick="applyFilters()">Aplicar Filtros</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Calendario Interactivo -->
        <div class="row mt-4">
            <div class="col-12">
                <div id="calendar"></div>
            </div>
        </div>

        <!-- Turnos Asignados -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Mis Turnos Asignados</h4>
                    </div>
                    <div class="card-body">
                        <p>Seleccione un turno y haga clic para cambiarlo:</p>
                        <table class="table table-bordered" id="turnosTable">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Turno</th>
                                    <th>Hora de Entrada</th>
                                    <th>Hora de Salida</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>10/12/2024</td>
                                    <td>Turno Mañana</td>
                                    <td>08:00 AM</td>
                                    <td>12:00 PM</td>
                                    <td><button class="btn btn-warning" onclick="changeTurn(1)">Cambiar</button></td>
                                </tr>
                                <tr>
                                    <td>10/12/2024</td>
                                    <td>Turno Tarde</td>
                                    <td>01:00 PM</td>
                                    <td>05:00 PM</td>
                                    <td><button class="btn btn-warning" onclick="changeTurn(2)">Cambiar</button></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@3.2.0/dist/fullcalendar.min.js"></script>
    @* Importante ver *@
    <script src="~/js/Horarios.js"></script>
</body>
</html>