@{
    ViewData["Title"] = "Galería";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/vergaleria.css">
 
</head>

<body>
    <!-- Main Content -->
    <main role="main" class="container mt-5">
        <h2 class="text-center">Galería de Servicios del Spa</h2>
        <div class="row mt-4">
            <!-- Galería de Imágenes -->
            <div class="col-md-12">
                <div id="carouselGallery" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/pexels-tugba-ozturk-368300535-19572633.jpg" class="d-block w-100 img-fluid" alt="Ambiente del Spa">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Ambiente Relajante</h5>
                                <p>Disfruta de un ambiente tranquilo y acogedor que te permitirá relajarte desde el primer momento.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="/images/pexels-pixabay-275768.jpg" class="d-block w-100 img-fluid" alt="Área de Relax">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Área de Relax</h5>
                                <p>Relájate en nuestra zona de descanso, ideal para desconectar del estrés.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="/images/pexels-olly-3767403.jpg" class="d-block w-100 img-fluid" alt="Relax con tu pareja">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Relax en Pareja</h5>
                                <p>Comparte una experiencia única con tu pareja en nuestro ambiente relajante.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="/images/pexels-olly-3757942.jpg" class="d-block w-100 img-fluid" alt="Masajes Relajantes">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Masajes Relajantes</h5>
                                <p>Experimenta nuestros masajes relajantes para aliviar tensiones y mejorar tu bienestar.</p>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselGallery" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Anterior</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselGallery" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Siguiente</span>
                    </button>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="/" class="btn btn-primary">Volver a la Página Principal</a>
        </div>
    </main>

    <!-- Footer -->
    <footer class="mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <p>&copy; 2024 Todos los derechos reservados | GP Enfermería Estética y Spa</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
