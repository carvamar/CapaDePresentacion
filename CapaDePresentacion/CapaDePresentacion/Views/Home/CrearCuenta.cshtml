@page
@model CapaDePresentacion.Views.Home.CrearCuentaModel
@{
    // Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/StyleSheet.css">
</head>
<body>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-link active" id="nav-home-tab" role="tab" aria-controls="nav-home" aria-selected="false">Crear Cuenta</a>
        </div>
    </nav>
    @* Pestañas menu *@

    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
            <!-- Contenido de Perfil pacientes (negrita letras) (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
            <!-- Contenido de VerInfoPte (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            <!-- Contenido de Historial (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-horariopaciente" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            <!-- Contenido de Horario (pestañas) -->
        </div>
    </div>
    <div class="container mt-5">
        <h2 class="text-center">Creacion de Cuentas de Usuarios</h2>

        <!-- Formulario para crear una cuenta -->
        <form id="userForm" class="p-4 border rounded bg-light">
            <h4>Crear nueva cuenta</h4>

            <!-- Campo de Nombre -->
            <div class="mb-3">
                <label for="username" class="form-label">Nombre de Usuario</label>
                <input type="text" class="form-control" id="username" placeholder="Ingrese el nombre del usuario" required>
            </div>

            <!-- Campo de Email -->
            <div class="mb-3">
                <label for="email" class="form-label">Correo Electrónico</label>
                <input type="email" class="form-control" id="email" placeholder="Ingrese el correo electrónico" required>
            </div>

            <!-- Selección de Rol -->
            <div class="mb-3">
                <label for="role" class="form-label">Rol</label>
                <select class="form-select" id="role" required>
                    <option value="" disabled selected>Seleccione un rol</option>
                    <option value="empleado">Empleado</option>
                    <option value="administrador">Administrador</option>
                    <option value="usuario">Usuario</option>
                </select>
            </div>

            <!-- Botón para crear usuario -->
            <button type="submit" class="btn btn-primary w-100">Crear Cuenta</button>
        </form>

        <!-- Mensaje de éxito -->
        <div id="successMessage" class="alert alert-success mt-4 d-none">
            La cuenta se creó correctamente y se envió un correo electrónico al usuario.
        </div>
    </div>

    

    <br>
    <br>
    <br>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    @* Importante ver *@
    <script src="~/js/CrearCuenta.js"></script>
</body>
</html>
