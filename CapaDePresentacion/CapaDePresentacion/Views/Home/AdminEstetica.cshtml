<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administración de Servicios - Estética</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body class="admin">
    <header class="py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h3">Administrar Servicios de Estética</h1>
            <a href="@Url.Action("Estetica", "Home")" class="btn btn-outline-secondary-custom">Regresar</a>
        </div>
    </header>

    <main role="main" class="container mt-4">
        <!-- Botón para agregar un nuevo servicio -->
        <section id="agregar-servicio" class="mb-4 text-end">
            <a href="#" class="btn btn-custom" data-bs-toggle="modal" data-bs-target="#agregarServicioModal">Agregar Nuevo Servicio</a>
        </section>

        <section id="listar-servicios">
            <h2>Servicios de Estética</h2>
            <div class="d-flex flex-wrap">
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="/images/pexels-arina-krasnikova-6663365.jpg" class="card-img-top" alt="Tratamiento Facial Hidratante">
                        <div class="card-body">
                            <h5 class="card-title">Tratamiento Facial Hidratante</h5>
                            <p class="card-text">Duración: 20 minutos<br>Costo: $150</p>
                            <a href="#" class="btn btn-custom btn-sm" data-bs-toggle="modal" data-bs-target="#verServicioModal">Ver</a>
                            <a href="#" class="btn btn-custom btn-sm" data-bs-toggle="modal" data-bs-target="#editarServicioModal">Editar</a>
                            <button class="btn btn-custom btn-sm">Eliminar</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="/images/pexels-cottonbro-7581584.jpg" class="card-img-top" alt="Tratamiento Botox">
                        <div class="card-body">
                            <h5 class="card-title">Botox Rejuvenecedor</h5>
                            <p class="card-text">Duración: 45 minutos<br>Costo: $100</p>
                            <a href="#" class="btn btn-custom btn-sm" data-bs-toggle="modal" data-bs-target="#verServicioModal">Ver</a>
                            <a href="#" class="btn btn-custom btn-sm" data-bs-toggle="modal" data-bs-target="#editarServicioModal">Editar</a>
                            <button class="btn btn-custom btn-sm">Eliminar</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="/images/pexels-kerimeveyik-16032366.jpg" class="card-img-top" alt="Tratamiento Depilacion Laser">
                        <div class="card-body">
                            <h5 class="card-title">Tratamiento Depilacion Laser</h5>
                            <p class="card-text">Duración: 90 minutos<br>Costo: $200</p>
                            <a href="#" class="btn btn-custom btn-sm" data-bs-toggle="modal" data-bs-target="#verServicioModal">Ver</a>
                            <a href="#" class="btn btn-custom btn-sm" data-bs-toggle="modal" data-bs-target="#editarServicioModal">Editar</a>
                            <button class="btn btn-custom btn-sm">Eliminar</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Modal para agregar servicio -->
    <div class="modal fade" id="agregarServicioModal" tabindex="-1" aria-labelledby="agregarServicioModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="agregarServicioModalLabel">Agregar Nuevo Servicio</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="nombre-servicio" class="form-label">Nombre del Servicio</label>
                            <input type="text" class="form-control" id="nombre-servicio" placeholder="Ej. Tratamiento Facial Rejuvenecedor">
                        </div>
                        <div class="mb-3">
                            <label for="descripcion-servicio" class="form-label">Descripción</label>
                            <textarea class="form-control" id="descripcion-servicio" rows="3" placeholder="Descripción del servicio"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="imagenes-servicio" class="form-label">Imágenes</label>
                            <input type="file" class="form-control" id="imagenes-servicio" multiple>
                        </div>
                        <div class="mb-3">
                            <label for="duracion-servicio" class="form-label">Duración (minutos)</label>
                            <input type="number" class="form-control" id="duracion-servicio" placeholder="Ej. 60">
                        </div>
                        <div class="mb-3">
                            <label for="costo-servicio" class="form-label">Costo</label>
                            <input type="number" class="form-control" id="costo-servicio" placeholder="Ej. 150">
                        </div>
                        <button type="submit" class="btn btn-custom">Agregar Servicio</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal para agregar servicio -->
    <div class="modal fade" id="agregarServicioModal" tabindex="-1" aria-labelledby="agregarServicioModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="agregarServicioModalLabel">Agregar Nuevo Servicio</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="nombre-servicio" class="form-label">Nombre del Servicio</label>
                            <input type="text" class="form-control" id="nombre-servicio" placeholder="Ej. Tratamiento Facial Rejuvenecedor">
                        </div>
                        <div class="mb-3">
                            <label for="descripcion-servicio" class="form-label">Descripción</label>
                            <textarea class="form-control" id="descripcion-servicio" rows="3" placeholder="Descripción del servicio"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="imagenes-servicio" class="form-label">Imágenes</label>
                            <input type="file" class="form-control" id="imagenes-servicio" multiple>
                        </div>
                        <div class="mb-3">
                            <label for="duracion-servicio" class="form-label">Duración (minutos)</label>
                            <input type="number" class="form-control" id="duracion-servicio" placeholder="Ej. 60">
                        </div>
                        <div class="mb-3">
                            <label for="costo-servicio" class="form-label">Costo</label>
                            <input type="number" class="form-control" id="costo-servicio" placeholder="Ej. 150">
                        </div>
                        <button type="submit" class="btn btn-custom">Agregar Servicio</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
