@page
@model CapaDePresentacion.Views.Home.RolesPermisos1Model
@{
    Layout = "~/Views/Shared/_LayoutRolesPermisos.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/StyleSheet.css">
</head>
<body>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-link active" id="nav-home-tab" role="tab" aria-controls="nav-home" aria-selected="false">Roles y Permisos</a>
            <a class="nav-link" id="nav-profile-tab" href="/Home/RolesPermisos1" role="tab" aria-controls="nav-profile" aria-selected="false">Gestion de Permisos</a>
        </div>
    </nav>
    @* Pestañas menu *@

    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
            <!-- Contenido de Perfil pacientes (negrita letras) (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
            <!-- Contenido de VerInfoPte (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            <!-- Contenido de Historial (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-horariopaciente" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            <!-- Contenido de Horario (pestañas) -->
        </div>
    </div>
    <div class="container mt-4">
        <h3>Gestión de Permisos</h3>
        <form id="form-permisos" class="mb-4">
            <div class="mb-3">
                <label for="nombreEmpleado" class="form-label">Nombre del Empleado</label>
                <input type="text" class="form-control" id="nombreEmpleado" placeholder="Ingrese el nombre del empleado" required>
            </div>
            <div class="mb-3">
                <label for="nivelPermiso" class="form-label">Nivel de Permiso</label>
                <select class="form-select" id="nivelPermiso">
                    <option value="1">Administrador</option>
                    <option value="2">Supervisor</option>
                    <option value="3">Empleado</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Asignar/Actualizar Permiso</button>
        </form>
    </div>


    <div class="container">
        <h4>Empleados y Permisos</h4>
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Nivel de Permiso</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Esteban Polo</td>
                    <td>Supervisor</td>
                    <td>
                        <button class="btn btn-warning btn-sm">Editar</button>
                        <button class="btn btn-danger btn-sm">Eliminar</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="container mt-4">
        <div class="alert alert-danger d-none" id="accesoDenegado">
            <strong>Acceso Denegado:</strong> No tienes permiso para acceder a esta sección.
        </div>
    </div>
    <div class="container mt-4">
        
        <button class="btn btn-danger" id="btnAccesoDenegado">Simular acceso denegado</button>

        <div class="mt-3">
            <div class="alert alert-danger d-none" id="accesoDenegado">
                <strong>Acceso Denegado:</strong> No tienes permiso para acceder a esta sección.
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    @* Importante ver *@
    <script src="~/js/RolesPermisos.js"></script>
</body>
</html>


