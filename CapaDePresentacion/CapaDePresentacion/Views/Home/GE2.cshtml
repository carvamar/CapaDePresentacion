@page
@model CapaDePresentacion.Views.Home.GE2Model
@{
    Layout = "~/Views/Shared/_LayoutGestEmpl.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/StyleSheet.css">
</head>
<body>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-link active" id="nav-home-tab" role="tab" aria-controls="nav-home" aria-selected="false">Perfil Pacientes</a>
            <a class="nav-link" id="nav-profile-tab" href="/Home/GE1" role="tab" aria-controls="nav-profile" aria-selected="false">Ver Informacion Paciente</a>
            <a class="nav-link" id="nav-contact-tab" href="/Home/GE2" role="tab" aria-controls="nav-contact" aria-selected="false">Historial Paciente</a>
            <a class="nav-link" id="nav-contact-tab" href="/Home/GE3" role="tab" aria-controls="nav-contact" aria-selected="false">Horario Pacientes</a>
        </div>
    </nav>

    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
            <!-- Contenido de Perfil pacientes (negrita letras) (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
            <!-- Contenido de VerInfoPte (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            <!-- Contenido de Historial (pestañas) -->
        </div>
        <div class="tab-pane fade" id="nav-horariopaciente" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
            <!-- Contenido de Horario (pestañas) -->
        </div>
    </div>
    <div class="container mt-4">
        @* Encabezado del paciente *@
        <div class="row mb-3">
            <div class="col-12">
                <h2 class="text-center">Historial de Tratamientos</h2>
                <h4 class="text-center text-muted">Paciente: <strong>Esteban Solano</strong></h4>
                <p class="text-center text-muted">Edad: 45 años | Género: Masculino | ID Paciente: 2</p>
            </div>
        </div>

       @* Tabla del historial de tratamientos *@
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">Fecha</th>
                        <th scope="col">Tratamiento</th>
                        <th scope="col">Profesional</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>01/12/2024</td>
                        <td>Revisión General</td>
                        <td>Dr. Hans Padilla</td>
                        <td>
                            <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#obsModal"
                                    onclick="setObservation('Todo en orden. Recomendaciones generales incluidas en el archivo adjunto para el seguimiento posterior.')">
                                Ver Observación
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td>15/11/2024</td>
                        <td>Terapia Física</td>
                        <td>Lic. Alexa Gutierrez</td>
                        <td>
                            <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#obsModal"
                                    onclick="setObservation('Mejora significativa observada, pero se recomienda continuar con las sesiones semanales hasta enero.')">
                                Ver Observación
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    @* modal boostrap *@
    <div class="modal fade" id="obsModal" tabindex="-1" aria-labelledby="obsModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="obsModalLabel">Observación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="modalObservationText"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function setObservation(observation) {
          document.getElementById('modalObservationText').textContent = observation;
        }
    </script>
    <br>
    <br>
    <br>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    @* Importante ver *@
    <script src="~/js/GestionEmpleado.js"></script>
</body>
</html>